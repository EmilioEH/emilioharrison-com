---
import '@fontsource/archivo-black'
import '@fontsource/dm-sans/400.css'
import '@fontsource/dm-sans/500.css'
import '@fontsource/dm-sans/700.css'
import '@fontsource/space-grotesk/300.css'
import '@fontsource/space-grotesk/400.css'
import '@fontsource/space-grotesk/500.css'
import '@fontsource/space-grotesk/600.css'
import '@fontsource/space-grotesk/700.css'
import GlobalFeedback from '../components/layout/GlobalFeedback'
import GlobalBurgerMenu from '../components/layout/GlobalBurgerMenu'
import GlobalDialogRoot from '../components/layout/GlobalDialogRoot'
import { GlobalScrollToTop } from '../components/layout/GlobalScrollToTop'

export interface Props {
  title: string
  isAdmin?: boolean
}

const { title, isAdmin } = Astro.props
const user = Astro.cookies.get('site_user')?.value
const isImpersonating = Astro.cookies.has('admin_mask')
---

<!doctype html>
<html lang="en" class="h-full">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no"
    />
    <meta
      name="description"
      content="AI-powered recipe manager for organizing, parsing, and generating grocery lists from your favorite recipes"
    />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Web App Manifest for Android/Chrome -->
    <link rel="manifest" href="/protected/recipes/manifest.json" />

    <!-- Apple Touch Icons for iOS -->
    <link rel="apple-touch-icon" href="/protected/recipes/apple-touch-icon.png" />

    <!-- iOS Web App Meta Tags -->
    <meta name="mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
    <meta name="apple-mobile-web-app-title" content="Chefboard" />

    <!-- Theme Colors -->
    <meta name="theme-color" content="#FF6B35" />
    <meta name="msapplication-TileColor" content="#FF6B35" />

    <meta name="generator" content={Astro.generator} />
    <title>{title} | Chef Mode</title>
    <style is:global>
      @import '../styles/global.css';
    </style>
    <script>
      import { logger } from '../lib/logger'
      logger.init()
    </script>
  </head>
  <body class="bg-paper text-ink min-h-screen font-sans antialiased">
    {
      isImpersonating && (
        <div class="sticky top-0 z-[100] flex items-center justify-between bg-red-600 px-4 py-3 text-center font-bold text-white shadow-md">
          <span class="flex items-center gap-2 text-sm uppercase tracking-wider">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="20"
              height="20"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <>
                <path d="M5 10V7a3 3 0 0 1 3-3h8a3 3 0 0 1 3 3v3" />
                <path d="M4 14a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v3a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2Z" />
                <path d="M12 14v7" />
                <path d="M9 21h6" />
              </>
            </svg>
            Impersonating User
          </span>
          <button
            id="stop-impersonation"
            class="rounded-full bg-white px-4 py-1.5 text-xs font-black uppercase tracking-wider text-red-600 shadow-sm transition-colors hover:bg-gray-100"
          >
            Stop Impersonating
          </button>
        </div>
      )
    }
    <script>
      const stopBtn = document.getElementById('stop-impersonation')
      if (stopBtn) {
        stopBtn.addEventListener('click', async () => {
          try {
            const res = await fetch('/protected/recipes/api/admin/revert', { method: 'POST' })
            if (res.ok) {
              window.location.reload()
            } else {
              alert('Failed to revert session')
            }
          } catch (e) {
            console.error(e)
            alert('Error reverting session')
          }
        })
      }
    </script>
    <div class="flex min-h-full flex-col">
      <main class="w-full flex-1 scroll-smooth">
        <slot />
      </main>
      <div class="fixed bottom-0 left-0 right-0 z-50">
        {/* <GlobalFeedback client:load /> */}
      </div>
    </div>

    {/* <GlobalBurgerMenu client:load user={user} isAdmin={isAdmin} /> */}
    {/* <GlobalDialogRoot client:load /> */}
    {/* <GlobalScrollToTop client:load /> */}

    <script>
      import '../lib/themeInit'

      if ('serviceWorker' in navigator) {
        window.addEventListener('load', async () => {
          try {
            const registration = await navigator.serviceWorker.register('/protected/recipes/sw.js')
            console.log('SW registered: ', registration)

            // Check for updates immediately
            registration.update()

            // Listen for new SW taking control (after skipWaiting + clients.claim)
            navigator.serviceWorker.addEventListener('controllerchange', () => {
              console.log('New SW activated')

              // Wait for any in-progress navigation to complete before checking
              // This prevents race conditions where the URL hasn't been updated yet
              // by React Router when users are clicking to open a recipe
              requestAnimationFrame(() => {
                setTimeout(() => {
                  // Don't reload if user is viewing a recipe detail - this prevents
                  // the bug where users get unexpectedly kicked back to the library
                  const params = new URLSearchParams(window.location.search)
                  const isViewingRecipe = params.get('view') === 'detail' && params.get('recipe')

                  // Also check history state as a backup (React Router sets this)
                  const historyState = window.history.state
                  const isNavigatingToRecipe =
                    historyState?.view === 'detail' && historyState?.activeRecipeId

                  // Debug logging to help diagnose any remaining issues
                  console.log('SW reload check:', {
                    url: window.location.search,
                    urlView: params.get('view'),
                    urlRecipe: params.get('recipe'),
                    historyView: historyState?.view,
                    historyRecipeId: historyState?.activeRecipeId,
                    willDefer: isViewingRecipe || isNavigatingToRecipe,
                  })

                  if (isViewingRecipe || isNavigatingToRecipe) {
                    console.log('Deferring SW reload - user viewing recipe detail')
                    // Store flag to reload on next natural navigation
                    sessionStorage.setItem('sw_update_pending', 'true')
                    return
                  }

                  console.log('Reloading for fresh SW state...')
                  window.location.reload()
                }, 100) // Small delay to let navigation complete
              })
            })
          } catch (registrationError) {
            console.log('SW registration failed: ', registrationError)
          }
        })
      }
    </script>
  </body>
</html>
