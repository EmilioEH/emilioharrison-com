{
  "name": "@emilio/recipes",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "preview:wrangler": "wrangler pages dev dist --port 8788",
    "lint": "eslint --cache .",
    "lint:strict": "eslint --cache -c eslint.config.strict.js .",
    "test": "vitest",
    "test:watch": "vitest watch",
    "test:unit": "vitest --run",
    "test:stryker": "stryker run",
    "test:e2e": "playwright test",
    "test:e2e:fast": "playwright test --project=chromium",
    "check:ts": "tsc --noEmit",
    "check:astro": "astro check",
    "check:parallel": "run-p check:ts check:astro test:unit",
    "check:quick": "npm run lint && npm run check:ts",
    "check:safety": "npm run lint && npm run format && npm run check:parallel",
    "check:hygiene": "npx knip && npx depcheck && npx jscpd src/",
    "check:full": "npm run check:safety && npm run test:stryker && npm run test:e2e:fast && npm run scan",
    "check:ci": "npm run lint:strict && npm run format && npm run check:parallel && npm run test:stryker && npm run test:e2e && npm run check:hygiene && npm run scan",
    "sync:feedback": "npx tsx scripts/sync-feedback.ts",
    "feedback:resolve": "npx tsx scripts/resolve-feedback.ts",
    "sync": "git add . && (git diff-index --quiet HEAD || git commit -m \"Auto-sync: $(date)\") && git push",
    "scan": "npm audit --audit-level=high",
    "format": "prettier --write .",
    "prepare": "husky"
  },
  "dependencies": {
    "@astrojs/cloudflare": "^12.6.12",
    "@astrojs/markdoc": "^0.15.9",
    "@astrojs/react": "^4.4.2",
    "@astrojs/tailwind": "^6.0.2",
    "@fontsource/archivo-black": "^5.2.8",
    "@fontsource/dm-sans": "^5.2.8",
    "@fontsource/space-grotesk": "^5.2.10",
    "@google/genai": "^1.34.0",
    "@nanostores/react": "^1.0.0",
    "astro": "^5.16.1",
    "cheerio": "^1.1.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "firebase": "^12.7.0",
    "firebase-admin": "^13.6.0",
    "fuse.js": "^7.1.0",
    "html2canvas": "^1.4.1",
    "lucide-react": "^0.554.0",
    "nanostores": "^1.1.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-markdown": "^10.1.0",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.6",
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.57.0",
    "@size-limit/file": "^12.0.0",
    "@stryker-mutator/core": "^9.4.0",
    "@stryker-mutator/typescript-checker": "^9.4.0",
    "@stryker-mutator/vitest-runner": "^9.4.0",
    "@tailwindcss/typography": "^0.5.19",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/html2canvas": "^0.5.35",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitest/coverage-v8": "^4.0.16",
    "astro-eslint-parser": "^1.2.2",
    "autoprefixer": "^10.4.22",
    "depcheck": "^1.4.7",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-astro": "^1.5.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "eslint-plugin-sonarjs": "^3.0.5",
    "eslint-plugin-unused-imports": "^4.3.0",
    "fast-check": "^4.5.2",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jscpd": "^4.0.5",
    "knip": "^5.70.2",
    "lint-staged": "^16.2.7",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "prettier": "^3.7.4",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "rollup-plugin-visualizer": "^6.0.5",
    "size-limit": "^12.0.0",
    "tailwindcss": "^3.4.18",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.1",
    "vitest": "^4.0.14",
    "wrangler": "^4.50.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,astro}": [
      "eslint --fix",
      "vitest related --run"
    ]
  }
}
