rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default: Deny all access
    // Backend uses Service Account which bypasses these rules.
    match /{document=**} {
      allow read, write: if false;
    }

    // Grocery Lists
    // ID Format: "{userId}_{weekStartDate}"
    match /grocery_lists/{listId} {
      // Allow READ if:
      // 1. Auth is valid AND
      // 2. ID starts with User ID (Owner) OR Document Data has matching userId
      allow read: if request.auth != null && (
        listId.split('_')[0] == request.auth.uid || 
        (resource != null && resource.data.userId == request.auth.uid)
      );

      // Allow WRITE if:
      // 1. Auth is valid AND
      // 2. ID starts with User ID (Owner) OR New Data has matching userId
      allow write: if request.auth != null && (
        listId.split('_')[0] == request.auth.uid ||
        (request.resource != null && request.resource.data.userId == request.auth.uid)
      );
    }
  }
}
