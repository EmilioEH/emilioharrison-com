---
import Layout from '../../layouts/Layout.astro'
---

<Layout title="Protected Area">
  <div class="container mx-auto p-8">
    <div class="mx-auto max-w-2xl rounded-lg bg-white p-8 shadow-md dark:bg-gray-800">
      <h1 class="mb-4 text-4xl font-bold text-gray-900 dark:text-white">Protected Dashboard</h1>
      <p class="mb-6 text-lg text-gray-700 dark:text-gray-300">
        Welcome to the secure area. All pages in this folder are password protected.
      </p>

      <div class="grid gap-4">
        <a
          href="/protected/example"
          class="block rounded border p-4 transition-colors hover:bg-gray-50 dark:border-gray-600 dark:hover:bg-gray-700"
        >
          <h3 class="font-bold text-blue-600 dark:text-blue-400">Example Sub-page &rarr;</h3>
          <p class="text-sm text-gray-600 dark:text-gray-400">
            Check out another protected page in this folder.
          </p>
        </a>
      </div>

      <div
        class="mt-8 rounded border border-green-200 bg-green-100 p-4 dark:border-green-700 dark:bg-green-900"
      >
        <p class="text-green-800 dark:text-green-200">
          <span class="font-bold">Status:</span> Authenticated
        </p>
      </div>
    </div>
  </div>
</Layout>
