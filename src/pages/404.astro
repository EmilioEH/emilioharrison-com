---
import Layout from '../layouts/Layout.astro'
import Button from '../components/ui/Button'

---

<Layout title="404 - Page Not Found | Emilio Harrison">
  <div class="flex min-h-[60vh] flex-col items-center justify-center text-center">
    <div class="mb-8">
      <h1 class="mb-4 text-6xl font-black md:text-8xl">404</h1>
      <p class="mb-4 text-2xl font-bold md:text-3xl">Page Not Found</p>
      <p class="mx-auto max-w-md text-lg text-gray-600">
        Looks like you've wandered off the map. Let's get you back on track.
      </p>
    </div>

    <div class="flex flex-wrap justify-center gap-4">
      <Button href="/" intent="secondary"> ‚Üê Back to Home </Button>
      <Button href="/fieldnotes" intent="secondary"> Read Field Notes </Button>
    </div>
  </div>
</Layout>
