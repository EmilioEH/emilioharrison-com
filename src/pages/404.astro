---
import Layout from '../layouts/Layout.astro';
import BrutalButton from '../components/ui/BrutalButton';
import { THEMES } from '../lib/themes';
---

<Layout title="404 - Page Not Found | Emilio Harrison">
    <div class="flex flex-col items-center justify-center min-h-[60vh] text-center">
        <div class="mb-8">
            <h1 class="text-6xl md:text-8xl font-black mb-4">404</h1>
            <p class="text-2xl md:text-3xl font-bold mb-4">Page Not Found</p>
            <p class="text-lg text-gray-600 max-w-md mx-auto">
                Looks like you've wandered off the map. Let's get you back on track.
            </p>
        </div>
        
        <div class="flex flex-wrap gap-4 justify-center">
            <BrutalButton client:load href="/" theme={THEMES.default}>
                ‚Üê Back to Home
            </BrutalButton>
            <BrutalButton client:load href="/fieldnotes" theme={THEMES.default}>
                Read Field Notes
            </BrutalButton>
            <BrutalButton client:load href="/lab" theme={THEMES.default}>
                Explore Lab
            </BrutalButton>
        </div>
    </div>
</Layout>
