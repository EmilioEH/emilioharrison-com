---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Protected Area">
  <div class="container mx-auto p-8">
    <div class="max-w-2xl mx-auto bg-white dark:bg-gray-800 p-8 rounded-lg shadow-md">
      <h1 class="text-4xl font-bold mb-4 text-gray-900 dark:text-white">Protected Dashboard</h1>
      <p class="text-lg text-gray-700 dark:text-gray-300 mb-6">
        Welcome to the secure area. All pages in this folder are password protected.
      </p>
      
      <div class="grid gap-4">
        <a href="/protected/example" class="block p-4 border rounded hover:bg-gray-50 dark:hover:bg-gray-700 dark:border-gray-600 transition-colors">
          <h3 class="font-bold text-blue-600 dark:text-blue-400">Example Sub-page &rarr;</h3>
          <p class="text-sm text-gray-600 dark:text-gray-400">Check out another protected page in this folder.</p>
        </a>
      </div>

      <div class="mt-8 p-4 bg-green-100 dark:bg-green-900 rounded border border-green-200 dark:border-green-700">
        <p class="text-green-800 dark:text-green-200">
          <span class="font-bold">Status:</span> Authenticated
        </p>
      </div>
    </div>
  </div>
</Layout>
